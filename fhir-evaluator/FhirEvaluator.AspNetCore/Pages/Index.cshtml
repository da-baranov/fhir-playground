@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@section scripts {
    <base href="~/" />
    <style>
html,
        body {
            margin: 0;
            padding: 0;
            height: 100%;
        }
 
        #loading-overlay {
            z-index: -1000;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
 
        #loading-overlay-box {
            padding: 50px;            
            border: 1px dotted #CCCCCC;
            font-size: 11px;
            font-family: Tahoma, Arial, Verdana;
        }
    </style>
}

<div id="loading-overlay">
    <div id="loading-overlay-box">
        <div><img src="~/images/logo_outburn.png" /></div>
        <div><b><i class="fas fa-spinner fa-spin"></i> Loading FHIRata expressions testing tool...</b></div>
    </div>
</div>
<script defer id="microloader" src="~/apps/fhirata/bootstrap.js"></script>